<% if (item.link) { %>
	<% if (item.title){ %>
		<h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.title %></a></h1>
	<% } else { %>
		<h1 class="title"><a href="<%- item.link %>" target="_blank"><%= item.link %></a></h1>
	<% } %>
<% } else { %>
	<% if (index) { %>
	<!-- display as entry -->
<div class="row">
	<div class="col-md-8">
		<h3 class="title">
			<a href="<%- config.root %><%- item.path %>" <% if(item.description) { %>title="<%= item.description %>"<% } %>>
        <% if (item.top) { %>
          <i class="fa fa-thumb-tack"></i>
          <!-- <font color=7D26CD>置顶</font>  -->
          <!-- <span class="post-meta-divider">|</span> -->
        <% } %>
        <%= item.title %>
      </a>
		</h3>
		</div>
	<div class="col-md-4">
		<div class="date">post @ <%= item.date.format(config.date_format) %>  </div>
		</div>
	</div>
	<% } else { %>
		<div class="page-header">
			<p><% if (item.icon) { %> <i class="<%= item.icon %>"></i> <% } %> <% if (item.page_title) { %><%= item.page_title %><% }else{ %><%= item.title %><% } %></p>
		</div>
	<% } %>
<% } %>
